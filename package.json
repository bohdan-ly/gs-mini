{
  "name": "dds-repo-base",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:backend": "npm start --workspace=backend",
    "dev:backend": "npm run dev --workspace=backend",
    "start:frontend": "npm start --workspace=frontend",
    "start:dev": "concurrently \"npm run dev:backend\" \"npm run start:frontend\"",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier . --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "prettier": "3.6.2"
  }
